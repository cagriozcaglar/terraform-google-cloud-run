container_port = 8080
  env_vars = [
    {
      name  = "ENVIRONMENT"
      value = "production"
    }
  ]
  secret_env_vars = [
    {
      name    = "API_KEY"
      secret  = google_secret_manager_secret.env_secret.secret_id
      version = google_secret_manager_secret_version.env_secret_version.version
    }
  ]
  secret_volumes = [
    {
      name       = "config-volume"
      mount_path = "/etc/config"
      secret     = google_secret_manager_secret.volume_secret.secret_id
      version    = google_secret_manager_secret_version.volume_secret_version.version
      path       = "app.conf" # The secret data will be mounted as a file named "app.conf"
    }
  ]
